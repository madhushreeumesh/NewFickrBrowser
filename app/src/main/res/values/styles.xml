<resources>

    <!-- Base application theme. -->
    <color name="primary">#96005a</color>
    <color name="primary_dark">#007975</color>
    <color name="primary_light">#B2DFDB</color>
    <color name="accent">#795548</color>
    <color name="primary_text">#212121</color>
    <color name="secondary_text">#757575</color>
    <color name="icons">#ffe4e1</color>
    <color name="divider">#BDBDBD</color>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:icon">@color/icons</item>
        <item name="android:windowBackground">@color/icons</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialog" parent="Theme.AppCompat.Light.Dialog">

        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/icons</item>
    </style>


</resources>
